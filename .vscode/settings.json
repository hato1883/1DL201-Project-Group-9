{
    "files.exclude": {
      // hide all .js that are in a directory
      "src/*.js": true,
      "tests/*.js": true,
      // hide all js.map that are in a directory
      "src/*.js.map": true,
      "tests/*.js.map": true,

      // hide package-lock
      "package-lock.json": true,

      // hide all Node Modules
      "node_modules/": true,

      // hide all dist directory used for building project
      "dist/": true,

      // hide coverage directory created by jest
      "coverage/": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false
}
